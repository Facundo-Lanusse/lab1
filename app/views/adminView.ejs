<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <style>
        table {
            width: 50%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 18px;
            text-align: left;
        }
        th, td {
            padding: 8px;
            border: 1px solid black;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h2>Lista de Usuarios</h2>
<table>
    <tr>
        <th>Username</th>
        <th>Email</th>
    </tr>
    <% users.forEach(user => { %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
        </tr>
    <% }); %>
</table>
<br>
<a href="/">Volver</a>
</body>
</html>
